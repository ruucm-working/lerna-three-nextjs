    "fs-extra": "^10.0.1",
    "globby": "^11.0.4",
    "glsl-random": "^0.0.5",
    "glslify": "^7.1.1",
    "glslify-loader": "^2.0.0",
    "lerna": "^4.0.0",
    "next": "^12.1.4",
    "next-compose-plugins": "^2.2.1",

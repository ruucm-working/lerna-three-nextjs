    "@next/bundle-analyzer": "^12.0.10",
    "@react-three/drei": "^9.2.0",
    "@react-three/fiber": "^8.0.10",
    "@types/node": "17.0.23",
    "@types/react": "18.0.1",
    "@types/react-dom": "18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.19.0",
    "autoprefixer": "^10.4.2",
    "babel-plugin-glsl": "^1.0.0",
    "esbuild": "^0.14.34",
